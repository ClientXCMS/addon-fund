<div class="row">
    <div class="col-sm-12 col-md-6">
        {{ field('max_fund', config('fundconfig.max'), trans('fund.admin.max_fund'), {type: 'integer'}) }}
    </div>

    <div class="col-sm-12 col-md-6">
        {{ field('min_fund', config('fundconfig.min'), trans('fund.admin.min_fund'), {type: 'integer'}) }}
    </div>
    <div class="col-sm-12 col-md-12">

    <div class="form-group custom-control custom-switch">
        <input type="checkbox" class="custom-control-input" id="enabletransfer" name="enabletransfer"
               data-toggle="collapse"
               data-target="#BannerGroup" {% if setting('fundconfig.enabletransfer', 'true') == 'true' %} checked {% endif %}>
        <label class="custom-control-label" for="enabletransfer">{{ trans("fund.admin.enabletransfer") }}</label>
    </div>
    <div id="BannerGroup" class="{{ setting('fundconfig.enabletransfer', 'true') == 'true' ? 'show' : 'collapse' }}">
        <div class="card border-primary">
            <div class="card-body mb-2">
                <div class="row">

                    <div class="col-sm-12 col-md-6">
                        {{ field('maxtransfer_fund', config('fundconfig.maxtransfer'), trans('fund.admin.maxtransfer_fund'), {type: 'integer'}) }}
                    </div>

                    <div class="col-sm-12 col-md-6">
                        {{ field('mintransfer_fund', config('fundconfig.mintransfer'), trans('fund.admin.mintransfer_fund'), {type: 'integer'}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>